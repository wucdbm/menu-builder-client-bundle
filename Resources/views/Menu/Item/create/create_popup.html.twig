<div class="container">
    <div class="row">
        <div class="col-lg-12">
            {% if route %}
                <h4 class="no-margin-top">Create a link to <code>{{ route|routeName }}</code></h4>
                <h4 class="no-margin-top">Pattern <code>{{ route.path }}</code></h4>
            {% else %}
                <h4 class="no-margin-top">External URL</h4>
            {% endif %}
            <hr/>
            {#{% if form.parameters is defined %}#}
                {% include '@WucdbmMenuBuilderClient/Menu/Item/create/form.html.twig' %}
            {#{% else %}#}
                {#{% include '@WucdbmMenuBuilderClient/Menu/Item/route_choice/url_form.html.twig' %}#}
            {#{% endif %}#}
        </div>
    </div>
    <script type="text/javascript">
        {% if form.parameters is defined %}
            {% for field in form.parameters if field.value.vars.choices is defined %}
                $('#{{ field.value.vars.id }}').select2({
                    tags: true,
                    createTag: function(tag) {
                        return {
                            id: tag.term,
                            text: 'New: ' + tag.term
                        };
                    }
                });
            {% endfor %}
        {% endif %}
    </script>
</div>